<body id="housesBody">

  <h1>Houses</h1>

  [
  <a href="regions">Regions</a>
  |
  <a href="houses">Houses</a>
  |
  <a href="subjects">Subjects</a>
  |
  <a href="battles">Battles</a>
  |
  <a href="houses_battles">Houses and Battles</a>]
  <br /><br />

  <div id="browse" style="display: block">

    {{! Create a table }}
    <table id="house-table">

      {{! Header section }}
      <thead>

        {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
        <tr>
          <th>House ID</th>
          <th>House Name</th>
          <th>House Lord</th>
          <th>Army Size</th>
          <th>Wealth</th>
          <th>Region</th>
        </tr>
      </thead>

      {{! Body section }}
      <tbody>

        {{! For each row, print the houseID, houseName, houseLord, armySize, wealth, and regionID in order }}
        {{#each data}}
          <tr data-value={{this.houseID}}>
            <td>{{this.houseID}}</td>
            <td>{{this.houseName}}</td>
            <td>{{this.houseLord}}</td>
            <td>{{this.armySize}}</td>
            <td>{{this.wealth}}</td>
            <td>{{this.regionName}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  </div>

  <!-- /views/houses.hbs -->
  <h2>Add House</h2>
  <form id="add-house-form" method="POST" action="/add-house-form">
    <label for="input-houseName"> House Name: </label>
    <input type="text" name="input-houseName" id="input-houseName" />

    <label for="input-houseLord"> House Lord: </label>
    <input type="text" name="input-houseLord" id="input-houseLord" />

    <label for="input-armySize"> Army Size: </label>
    <input type="number" name="input-armySize" id="input-armySize" />

    <label for="input-wealth"> Wealth: </label>
    <input type="number" name="input-wealth" id="input-wealth" />

    <label for="input-regionID">Region: </label>
    <select name="input-regionName" id="input-regionID">
      <option value="test">Select a Region</option>
      {{#each regions}}
        <option value="{{this.regionID}}">{{this.regionName}}</option>
      {{/each}}
    </select>
    <input type="submit" />
  </form>

</body>

{{! Embed our javascript to handle the DOM manipulation and AJAX request }}
<script src="./js/add_house.js"></script>